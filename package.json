{
  "name": "scrabbly",
  "version": "1.0.0",
  "description": "a classic word game",
  "main": "src/backend/service/index.mjs",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "start": "tsc && nodemon dist/backend/service/index.mjs",
