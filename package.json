  "dependencies": {
    "dotenv": "^16.3.1",
    "argon2": "^0.30.3",
    "express": "^4.18.2",
    "nodemon": "^2.0.22",
    "pure-uuid": "^1.6.3",
    "typescript": "^5.1.3"
  },
  "devDependencies": {
